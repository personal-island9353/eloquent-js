{
  "name": "eloquent",
  "version": "1.0.0",
  "description": "Code to work along the Eloquent JavaScript book from Marijn Haverbeke",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "node --test",
    "test:watch": "node --watch --test",
    "format": "prettier . --write",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck && eslint src/ --max-warnings 0",
    "lint:fix": "npm run typecheck && eslint src/ --max-warnings 0 --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/personal-island9353/eloquent-js.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/personal-island9353/eloquent-js/issues"
  },
  "homepage": "https://github.com/personal-island9353/eloquent-js#readme",
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
